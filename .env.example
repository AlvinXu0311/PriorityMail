# ============================================================================
# PriorityMail - Environment Configuration Template
# ============================================================================
# DRAFT VERSION - FOR TESTING AND EVALUATION PURPOSES ONLY
#
# Copy this file to .env and fill in your actual values
# ============================================================================

# ============================================================================
# API KEYS (REQUIRED)
# ============================================================================

# OpenAI API Key (required if using OpenAI embeddings)
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini API Key (required for todo generation)
GEMINI_API_KEY=your_gemini_api_key_here

# ============================================================================
# SECURITY KEYS (REQUIRED for production)
# ============================================================================

# Flask Secret Key (generate with: python -c "import secrets; print(secrets.token_hex(32))")
FLASK_SECRET_KEY=your_random_secret_key_here

# API Server Authentication Key (generate with: python -c "import secrets; print(secrets.token_hex(16))")
API_KEY=your_api_key_here

# ============================================================================
# PRIORITY CLASSIFICATION MODE
# ============================================================================

# Classification Mode: 'ml_model' or 'llm_only'
# - ml_model: Use local ML model for classification + Gemini for todo generation (RECOMMENDED - Fast & Accurate)
# - llm_only: Use Gemini LLM for both classification and todo generation (Slower but no ML model needed)
PRIORITY_MODE=ml_model

# ============================================================================
# GEMINI CONFIGURATION
# ============================================================================

# Gemini Model Name
GEMINI_MODEL_NAME=gemini-pro

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================

# Flask Web Server
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=false

# API Server
API_SERVER_PORT=4999

# ============================================================================
# GMAIL API CONFIGURATION
# ============================================================================

# Gmail API Scopes (comma-separated if multiple)
GMAIL_SCOPES=https://www.googleapis.com/auth/gmail.readonly

# Email Fetching Settings
EMAIL_FETCH_DAYS=7
EMAIL_FETCH_MAX_RESULTS=100

# ============================================================================
# FILE PATHS
# ============================================================================

# Cache Directory
CACHE_DIR=cache

# Model Path
DATA_MODELS_DIR=data/models
CLASSIFIER_MODEL_FILE=priority_classifier.pkl

# OAuth Files
GMAIL_CREDENTIALS_FILE=credentials.json
GMAIL_TOKEN_FILE=token.pickle
